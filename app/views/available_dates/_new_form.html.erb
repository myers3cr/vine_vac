<div class="form-inputs">
  <br />
  <div class="form-group">
    <%= label_tag "start_date", "Start Date", class: "control-label" %>
    <%= text_field_tag "start_date", nil, class: "datepicker form-control required"  %>
  </div>
  <div class="form-group"> 
    <%= label_tag "end_date", "End Date", class: "control-label" %>
    <%= text_field_tag "end_date", nil, class: "datepicker form-control required"  %>
  </div>
  <div class="form-group">
    <%= label_tag "price", "Daily Rate", class: "control-label" %>
    <%= text_field_tag "price", nil, class: "form-control required" %>
  </div>
</div>

<br />

<div class="form-actions">
  <%= submit_tag "Save", class: "btn btn-primary" %>
  &nbsp;&nbsp;
  <%= link_to 'Back to list', location_available_dates_path(@location) %>
</div>