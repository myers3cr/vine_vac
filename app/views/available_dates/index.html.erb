<div class="col-xs-6 col-xs-offset-3">

  <h3><%= @location.name %> availability</h3>

  <div id="calendar"></div>

  <div class="form-actions2">
  <br />
  <p>
    <%= link_to "New Availability", new_location_available_date_path,
          class: "btn btn-primary", method: :get %>
    &nbsp;&nbsp;
    <%= link_to 'Back to list', locations_path %>
  </p>
  </div>
</div>

<div class="col-xs-8 col-xs-offset-2">
<% if @available_dates.count > 0 %>

  <table class="table table-hover">

    <thead>
      <tr>
        <th>Date</th>
        <th>Status</th>
        <th>Price</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @available_dates.each do |d| %>
      <tr>
        <td><%= d.available_date %></td>
        <td><%= d.status %></td>
        <td><%= d.price %></td>
          <td>
            <%= link_to edit_location_available_date_path(@location, d),
                  id: "edit", class: "btn btn-default btn-sm" do %>
              <span class="glyphicon glyphicon-pencil"></span>
              <span class="sr-only">Edit</span>
            <% end %>
            <%= link_to location_available_date_path(@location, d),
                  id: "delete", class: "btn btn-default btn-sm",
                  data: { confirm: 'Are you sure?' }, method: :delete  do %>
              <span class="glyphicon glyphicon-trash"></span>
              <span class="sr-only">Delete</span>
            <% end %>
          </td>
      </tr> 
    <% end %>
    </tbody>
  </table>
<br />
<% else %>

  <p>This location is not currently available to the public.</p>

<% end %>
</div>

<script type="text/javascript">
  $(document).ready(function() {
  $('#calendar').fullCalendar({
    // put your options and callbacks here
    events: '<%=location_available_dates_path%>.json',
    eventBackgroundColor: "green"
  })
});
</script>