<div class="form-inputs">
  <%= f.input :start_date, label: "Check-in date",
              as: :string, input_html: { class: "datepicker" } %>
  <%= f.input :end_date, label: "Check-out date",
              as: :string, input_html: { class: "datepicker" }  %>
  <%= f.input :occupancy, label: "Number of guests",
              as: :integer %>
  <%= f.input :city, label: "City", collection: Location.city_names, prompt: "Select City" %>
</div>

<div class="form-actions">
  <%= f.submit "Search", class: "btn btn-primary" %>
  &nbsp;&nbsp;
  <%= link_to 'Back to reservations', host_reservations_path %>
</div>
