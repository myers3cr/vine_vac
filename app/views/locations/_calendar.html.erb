<div class="well">
  <div id="dashboard-calendar">
  <div id="calendar"></div>

  <br />
  <%= link_to "Update Availability", location_available_dates_path(@location), class: 'btn btn-primary', type: "button" %>
</div>
<script type="text/javascript">
  $(document).ready(function() {
  $('#calendar').fullCalendar({
    header: {
      left: "",
      center: "title",
      right: "",
    },
    height: "auto",
    defaultView: "month",
    // put your options and callbacks here
    events: '<%=location_available_dates_path(@location)%>.json',
    eventBackgroundColor: "green"
  })
});
</script>