<%= simple_form_for @location, defaults: { input_html: { class: 'form-control input_sm' } } do |f| %>
  <%= f.input :loc_type,
        required: true,
        label: 'Accomodation type',
        collection: Location::LOC_TYPES,
        default: Location::LOC_TYPES[1] %>
  <%= f.input :name, 
        placeholder: 'Yellow bedroom' %>
  <%= f.input :description, 
        placeholder: 'One twin bed' %>
  <%= f.input :address_1, 
        label: "Street Address", 
        placeholder: '123 Sesame Street' %>
  <%= f.input :address_2, 
        label: 'Secondary Address (optional)',
        placeholder: 'Suite 17' %>
  <%= f.input :city,
        placeholder: 'Anytowm' %>
  <%= f.input :state,
        placeholder: 'NY' %>
  <%= f.input :postal_code,
        label: "Zip",
        placeholder: '12345' %>
  <%= f.submit "Save", class: "btn btn-primary" %>&nbsp;<%= link_to 'Cancel', locations_path %>
<% end %>
