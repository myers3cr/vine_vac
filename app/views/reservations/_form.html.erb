<%= simple_form_for(@reservation) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :location %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
  </div>

  <div class="form-actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
    &nbsp;&nbsp;
    <%= link_to 'Back to list', locations_path %>
  </div>
<% end %>
